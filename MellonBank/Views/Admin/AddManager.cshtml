@using MellonBank.Models.ViewModels
@model UserViewModel

<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-action="AddManager" method="post">
            <h2>Create a new manager account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!--Name-->
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="First Name" />
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!--Last Name-->
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Last Name" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!--Address-->
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" autocomplete="street-address" aria-required="true" placeholder="Address 123" />
                <label asp-for="Address">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <!--Phone-->
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" type="number" class="form-control" autocomplete="tel" aria-required="true" placeholder="6912345678" />
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <!--AFM-->
            <div class="form-floating mb-3">
                <input asp-for="AFM" type="number" class="form-control" autocomplete="off" aria-required="true" placeholder="123456789" />
                <label asp-for="AFM">AFM</label>
                <span asp-validation-for="AFM" class="text-danger"></span>
            </div>

            <!--Email-->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" type="email" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!--Username-->
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Username" />
                <label asp-for="UserName">Username</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!--Password-->
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>