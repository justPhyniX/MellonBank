@model string

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>Add Money To Your Bank Account</h1>
        <form asp-action="AddMoneyToMyAccount" method="post">
            <input type="hidden" name="accountNumber" value="@Model" />
            <div class="form-group">
                <label for="amount" class="control-label">Amount</label>
                <input name="amount" class="form-control" autocomplete="off"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Money" class="btn btn-primary my-2 w-100" />
            </div>
        </form>
    </div>
</div>