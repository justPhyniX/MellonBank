@model MellonBank.Models.BankAccount

@{
    ViewData["Title"] = "BankAccountDetails";
}

<h1>BankAccountDetails</h1>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserAFM)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserAFM)
        </dd>
        <dt class = "col-sm-2">
            Balance (EUR)
        </dt>
        <dd class = "col-sm-10">
            @Model.BalanceEuro.ToString("N2")
        </dd>
        @if(ViewBag.BalanceUSD != null)
        {
            <dt class="col-sm-2">
                Balance (USD)
            </dt>
            <dd class="col-sm-10">
                @ViewBag.BalanceUSD.ToString("N2")
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountType)
        </dd>
    </dl>
</div>
